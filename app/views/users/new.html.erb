<h2>SignUp User </h2>
<% if @user.errors.any? %>
<h2>There are the errors</h2>
<ul>
<% @user.errors.full_messages.each do |msg| %>
<li><%=msg%></li>
<% end%>
<ul>
<% end %>
<%= form_for @user do |f| %>
<p>
	<%=f.label :username %>
	<%= f.text_field :username %>
</p>
<p>
	<%= f.label :email %>
	<%= f.email_field :email%>
</p>
<p>
	<%= f.label :password %>
	<%= f.password_field :password%>
</p>
<p>
<%= f.submit "Sign Up"%>
	</p>
<% end %>
<%= link_to "back to articles listing", articles_path %>